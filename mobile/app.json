{
  "expo": {
    "name": "SupplyFlow",
    "slug": "supplyflow-mobile",
    "version": "1.0.0",
    "orientation": "portrait",
    "userInterfaceStyle": "dark",
    "splash": {
      "resizeMode": "contain",
      "backgroundColor": "#1e293b"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.supplyflow.mobile"
    },
    "android": {
      "adaptiveIcon": {
        "backgroundColor": "#1e293b"
      },
      "package": "com.supplyflow.mobile"
    },
    "scheme": "supplyflow",
    "plugins": [
      "expo-router"
    ]
  }
}

